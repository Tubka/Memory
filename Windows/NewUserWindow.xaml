<Window x:Class="Memory.Views.NewUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Nowe Konto" Width="300"
        WindowStartupLocation="CenterOwner"
        SizeToContent="Height"> <!-- Automatyczna wysokość -->

    <Grid VerticalAlignment="Center"> <!-- Usunięcie StackPanel, żeby uniknąć nadmiernego powiększania -->
        <StackPanel Margin="20">
            <TextBlock Text="Nowe konto" FontSize="20" HorizontalAlignment="Center"/>
            <TextBlock Text="Wprowadź nazwę użytkownika" Foreground="Gray" Margin="0,10,0,5" HorizontalAlignment="Center"/>
            <TextBox Name="UsernameTextBox" Width="200" />
            <TextBlock Text="Wprowadź hasło" Foreground="Gray" Margin="0,10,0,5" HorizontalAlignment="Center"/>
            <PasswordBox Name="PasswordBox" Width="200" />
            <TextBlock Text="Wprowadź ponownie hasło" Foreground="Gray" Margin="0,10,0,5" HorizontalAlignment="Center"/>
            <PasswordBox Name="RepeatPasswordBox" Width="200" />
            <Button Content="Utwórz" Click="CloseNewUserPopup_Click" HorizontalAlignment="Center" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Window>
